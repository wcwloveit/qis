        <pattern>/login</pattern>
        <pattern>/logout</pattern>
    </excludes>
    <decorator name="default" page="default.jsp">
        <pattern>/main</pattern>
        <pattern>/organization/*</pattern>
        <pattern>/log/*</pattern>
        <pattern>/dictionary/*</pattern>
